<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<constant name="struts.enable.DynamicMethodInvocation"
		value="false" />
	<package name="default" extends="struts-default" namespace="/"
		strict-method-invocation="true">

		<action name="AdminLogin"
			class="com.library.action.AdminLoginAction" method="create">
			<result name="success">/Success.jsp</result>
			<result name="error">/Error.jsp</result>
		</action>
		<action name="UpdateBooks"
			class="com.library.action.UpdateBooksAction" method="create">
			<result name="success">/BooksUpdated.jsp</result>
			<result name="error">/Error1.jsp</result>
		</action>
		<action name="DeleteBooks"
			class="com.library.action.DeleteBooksAction" method="create">
			<result name="success">/BooksRemoved.jsp</result>
			<result name="error">/Error1.jsp</result>
		</action>


		<action name="StudentLogin"
			class="com.library.action.StudentLoginAction" method="create">
			<result name="success">/Success1.jsp</result>
			<result name="error">/Error.jsp</result>
		</action>
		<action name="UpdateStudents"
			class="com.library.action.UpdateStudentsAction" method="create">
			<result name="success">/StudentsUpdated.jsp</result>
			<result name="error">/Error1.jsp</result>
		</action>
		<action name="DeleteStudents"
			class="com.library.action.DeleteStudentsAction" method="create">
			<result name="success">/StudentsRemoved.jsp</result>
			<result name="error">/Error1.jsp</result>
		</action>
		<action name="UpdateBorrowBooks"
			class="com.library.action.UpdateBorrowBooksAction" method="create">
			<result name="success">/BorrowBooksUpdated.jsp</result>
			<result name="error">/Error1.jsp</result>
		</action>
		<action name="UpdateReturnBooks"
			class="com.library.action.UpdateReturnBooksAction" method="create">
			<result name="success">/BooksReturned.jsp</result>
			<result name="error">/Error1.jsp</result>
		</action>
		<action name="FineAmount"
			class="com.library.action.FineAction" method="create">
			<result name="success">/FinePaid.jsp</result>
			<result name="error">/FineNotPaid.jsp</result>
		</action>
		
	</package>

</struts>